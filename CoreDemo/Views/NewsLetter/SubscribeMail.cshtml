<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>



<div class="tech-btm">
    <h4>Mail bültenine abone olun</h4>
    <p>Teknoloji, yazılım ve diğer bloglar.</p>
    <form id="mailNewsletter" action="/NewsLetter/SubscribeMail/" method="post">
        <input type="email" placeholder="Email" required="" name="Mail">
        <input type="submit" value="Abone Ol">
    </form>
</div>
<script>
    $("#mailNewsletter").submit(function (event) {
        event.preventDefault();

        var form = $(this);
        var url = form.attr('action');
        $.ajax({
            type: "POST",
            url: url,
            data: form.serialize(),
            success: function () {
                swal("Tebrikler!", "Mail Bültenine Başarıyla Kayıt oldunuz.");
            }
        });
    });
</script>