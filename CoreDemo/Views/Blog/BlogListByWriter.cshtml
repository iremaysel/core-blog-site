@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>BlogListByWriter</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Categori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogyID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @if (@item.BlogStatus == true){<td>Aktif</td>}
            else{ <td>Pasif</td> }
            <td><a href ="/Blog/DeleteBlog/@item.BlogyID/" class="btn btn-danger">Sil</a></td>
            <td><a href ="/Blog/EditBlog/@item.BlogyID/" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">Yeni Blog Oluştur</a>
