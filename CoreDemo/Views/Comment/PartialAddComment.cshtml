<div class="comment-top">
    <h4>Bir Yorum Yapın</h4>
    <div class="comment-bottom">
        <form id="partialAddComment" asp-controller="Comment" asp-action="PartialAddComment" method="POST">
            <input class="form-control" type="text" placeholder="Adınız Soyadınız" required="" name="CommentUserName">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">
            <textarea class="form-control" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
            <button id ="commentAdd" type="submit" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>
